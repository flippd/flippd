<% if flash[:notification] %>
	<% flash[:notification].each do |notification_id, notification| %>
		<div class="col-md-4 col-md-offset-8">
			<div id="inner-notification" class="inner-notification alert alert-info alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="dismissAlert('<%= notification_id%>')"><span aria-hidden="true">&times;</span></button>
				<strong><%= notification["title"]%></strong> <%= notification["text"]%>
			</div>
		</div>
	<% end %>
<% end %>